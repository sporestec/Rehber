
@{
    ViewData["Title"] = "PersonnelMainPage";
}




<button id="btnNewPersonnel" class="btn m-2  btn-success">Add New Personnel</button>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Personnel Id</th>
            <th>First Name</th>
            <th> Last Name</th>
            <th> Web Site </th>
            <th>Email </th>
            <th>Unit Name</th>
            <th>Telephone</th>
            <th> Extra Info </th>
            <th>Delete</th>
            <th>Edit</th>

        </tr>
    </thead>
    <tbody id="personnelList">
